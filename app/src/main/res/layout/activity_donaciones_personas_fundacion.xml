<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DonacionesFundacionActivity"
    android:padding="16dp">

    <Button
        android:id="@+id/btnDonacionesPendientesPersonas"
        android:layout_width="223dp"
        android:layout_height="69dp"
        android:layout_marginTop="156dp"
        android:background="#0bc0c6"
        android:text="Ver Donaciones Pendientes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDonacionesCompletadasPersonas"
        android:layout_width="220dp"
        android:layout_height="61dp"
        android:layout_marginBottom="296dp"
        android:background="#0bc0c6"
        android:text="Ver Donaciones Completadas/En Proceso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDonacionesPendientesPersonas"
        app:layout_constraintVertical_bias="0.692" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="220dp"
        android:layout_height="61dp"
        android:background="#0bc0c6"
        android:text="Volver"
        app:layout_constraintBottom_toTopOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDonacionesCompletadasPersonas" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="232dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDonacionesCompletadasPersonas"
        app:layout_constraintVertical_bias="0.787"
        app:srcCompat="@drawable/imagen1" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona las donaciones que deseas ver"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnDonacionesPendientesPersonas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416" />
</androidx.constraintlayout.widget.ConstraintLayout>