<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.VerPerfilFundacion">

    <!-- Título -->
    <TextView
        android:id="@+id/title_VerPerfilFundacion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="#0bc0c6"
        android:text="Ver Perfil Fundación"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Correo -->
    <TextView
        android:id="@+id/tvTituloCorreoFundacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Correo Electrónico"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title_VerPerfilFundacion"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCorreoFundacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="correo@ejemplo.com"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloCorreoFundacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nombre Fundación -->
    <TextView
        android:id="@+id/tvTituloNombreFundacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre Fundación"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvCorreoFundacion"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNombreFundacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nombre de la Fundación"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloNombreFundacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dirección -->
    <TextView
        android:id="@+id/tvTituloDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dirección"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvNombreFundacion"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dirección de la Fundación"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloDireccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Necesidades -->
    <TextView
        android:id="@+id/tvTituloNecesidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Necesidades"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvDireccion"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNecesidades"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Necesidades de la Fundación"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloNecesidades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nombre Representante -->
    <TextView
        android:id="@+id/tvTituloRepresentante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre Representante"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvNecesidades"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvRepresentante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nombre del Representante"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloRepresentante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Teléfono Representante -->
    <TextView
        android:id="@+id/tvTituloTelefonoRepresentante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Teléfono"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvRepresentante"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTelefonoRepresentante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Teléfono del Representante"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloTelefonoRepresentante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Editar Perfil -->
    <Button
        android:id="@+id/btnEditarPerfilFundacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#0bc0c6"
        android:text="Editar Perfil"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvTelefonoRepresentante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Regresar -->
    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#0bc0c6"
        android:text="Regresar"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnEditarPerfilFundacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>