<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.EditarPerfilFundacion">

    <!-- Título -->
    <TextView
        android:id="@+id/title_EditarPerfilFundacion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="#0bc0c6"
        android:text="Editar Perfil Fundación"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Correo (Solo lectura) -->
    <TextView
        android:id="@+id/tvTituloCorreoFundacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Correo Electrónico"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title_EditarPerfilFundacion"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etCorreoFundacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Correo Electrónico"
        android:textColor="#444444"
        android:textSize="16sp"
        android:enabled="false"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/tvTituloCorreoFundacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nombre Fundación -->
    <TextView
        android:id="@+id/tvTituloNombreFundacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre Fundación"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etCorreoFundacion"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etNombreFundacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Nombre de la Fundación"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloNombreFundacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dirección -->
    <TextView
        android:id="@+id/tvTituloDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dirección"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etNombreFundacion"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Dirección"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloDireccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Necesidades -->
    <TextView
        android:id="@+id/tvTituloNecesidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Necesidades"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etDireccion"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etNecesidades"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Necesidades"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloNecesidades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nombre Representante -->
    <TextView
        android:id="@+id/tvTituloRepresentante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre Representante"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etNecesidades"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etRepresentante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Nombre del Representante"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloRepresentante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Teléfono Representante -->
    <TextView
        android:id="@+id/tvTituloTelefonoRepresentante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Teléfono Representante"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etRepresentante"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etTelefonoRepresentante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Teléfono"
        android:textColor="#444444"
        android:textSize="16sp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/tvTituloTelefonoRepresentante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etTelefonoRepresentante"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelarFundacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:background="#0bc0c6"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnGuardarFundacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:background="#0bc0c6"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>