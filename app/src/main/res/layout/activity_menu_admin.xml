<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".view.MenuAdmin">

    <!-- Título -->
    <TextView
        android:id="@+id/tvMenuAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione una opción"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Botón Donantes -->

    <!-- Botón Fundaciones -->

    <!-- Botón Donaciones -->

    <!-- Botón Cerrar Sesión -->

    <Button
        android:id="@+id/btnDonantes"
        android:layout_width="241dp"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:background="#0bc0c6"
        android:text="Donantes"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMenuAdminTitle" />

    <Button
        android:id="@+id/btnFundaciones"
        android:layout_width="241dp"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:background="#0bc0c6"
        android:text="Fundaciones"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDonantes" />

    <Button
        android:id="@+id/btnDonaciones"
        android:layout_width="241dp"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:background="#0bc0c6"
        android:text="Donaciones"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFundaciones" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="241dp"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:background="#0bc0c6"
        android:text="Cerrar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDonaciones" />

</androidx.constraintlayout.widget.ConstraintLayout>